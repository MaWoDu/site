<div class="training-bio">
  <div class="training-bio__inner">
    <div class="training-bio__instructor-container">
      <span class="training-bio__instructor-avatar"
            style="background-image: url({{ site.baseurl }}{{ page.intro.instructor-avatar }})"></span>
      <span class="training-bio__instructor-title">{{ training_data.course-instructor-bio-title }}</span>
      <span class="training-bio__instructor-name">{{ training_data.author }}</span>
    </div>
    <div class="training-bio__content-container">
      <div class="training-bio__content-wrapper">
        <p class="training-bio__content">{{ training_data.instructor-bio-p-1 }}</p>
        <p class="training-bio__content">{{ training_data.instructor-bio-p-2 }}</p>
      </div>
      <button class="training-bio__read-more-button">{% t single-training.read-more %}</button>
    </div>
  </div>
</div>

<script async src="{{ '/assets/custom/js/training-instructor-bio.js' | prepend: site.baseurl }}"></script>
